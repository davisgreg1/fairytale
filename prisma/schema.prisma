// learn more about it in the docs: https://pris.ly/d/prisma-schema


datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// Enum for user role
enum Role {
  USER
  ADMIN
}

// Enum for subscription status
enum SubscriptionStatus {
  SUBSCRIBED
  UNSUBSCRIBED
}

model User {
  id                 Int                 @id @default(autoincrement())
  email              String              @unique
  role               Role                @default(USER)
  subscriptionStatus SubscriptionStatus  @default(UNSUBSCRIBED)
  createdAt          DateTime            @default(now())
  deletedAt          DateTime?           // To keep track of deleted users
  stories            Story[]             // Relation to Story for owned stories
  favoriteStories    FavoriteStory[]     // Relation to FavoriteStory for favorited stories
  storyCount         Int                 @default(0) // To keep track of free stories for unsubscribed users
}

model Story {
  id       Int            @id @default(autoincrement())
  text     String
  owner    User           @relation(fields: [userId], references: [id])
  userId   Int
  favorites  FavoriteStory[]

  @@index([userId])
}

model FavoriteStory {
  id          Int      @id @default(autoincrement())
  pageNumber  Int
  storyText   String
  imageURL    String? // Optional field for image URL
  story       Story   @relation(fields: [storyId], references: [id])
  storyId     Int
  user        User    @relation(fields: [userId], references: [id])
  userId      Int

  @@index([storyId])
  @@index([userId])
}
